
@article{
仇巍巍陈从喜-1,
   Author = {仇巍巍 and 陈从喜 and 项家铀 and 高宇 and 齐书花 and 朱先云},
   Title = {三维GIS在国土空间规划中的应用综述},
   Journal = {国土资源信息化},
   Pages = {1-6},
   Note = {页数: 6},
   Abstract = {国土空间规划是国家空间发展的指南、可持续发展的空间蓝图，是各类开发保护建设活动的基本依据。国土空间规划编制涉及大量的空间数据、属性数据和社会统计数据，同时要综合多目标下的各种规划因素，以及考虑规划编制后的有效实施和管理。为了提高国土空间规划工作效率和决策科学性，GIS技术应用到国土空间规划成为必然趋势，然而传统的二维GIS国土空间规划多以二维形式呈现数据和分析功能，通过三维技术体系呈现这些数据和功能的需求日益迫切。三维GIS技术日益成熟，无论规划分析评价方面还是监测评估预警方面都能为国土空间规划提供非常好、直观、可量化的技术手段。本文结合已有的规划设计方法，围绕三维GIS在国土空间规划的基础数据、规划分析评价、规划方案评估监督及公众服务等方面进行了具体阐述，可供国土空间规划信息化建设和服务人员参考。},
   Keywords = {国土空间规划;三维GIS;空间分析;地理设计},
   Year = {2022} }




@article{
